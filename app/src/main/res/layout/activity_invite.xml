<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tsutsuku.artcollection.ui.mine.InviteActivity"
    android:background="@color/bg_all">
    <include layout="@layout/base_title"
        android:id="@+id/include" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/banner_invite"
        android:id="@+id/imageView2"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
        <FrameLayout
            android:layout_width="153dp"
            android:layout_height="102dp"
            android:layout_gravity="center"
            android:background="@drawable/img_redpacket_invite"
            android:id="@+id/frameLayout"
            android:layout_above="@+id/textView2"
            android:layout_marginBottom="12dp"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2">
            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="@string/invite_code"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="48dp"
                android:layout_marginRight="104dp"
                android:layout_marginBottom="42dp"
                android:textSize="30px"
                android:textColor="@color/tv_invite"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/invite_code_default"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:textColor="@color/tv_invite"
                android:layout_marginBottom="10dp"
                android:textSize="40px"/>
        </FrameLayout>
    <TextView
        android:id="@+id/tv_invite_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_success"
        android:layout_marginTop="140dp"
        android:textSize="15dp"
        android:layout_below="@+id/imageView2"
        android:layout_toLeftOf="@+id/frameLayout"
        android:layout_toStartOf="@+id/frameLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_number"
        android:textColor="@color/orange"
        android:layout_alignBaseline="@+id/tv_invite_success"
        android:layout_marginLeft="104dp"
        android:textSize="23dp"
        android:id="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_man"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="8dp"
        android:textSize="15dp"
        android:id="@+id/textView3" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_rewards"
        android:textSize="15dp"
        android:id="@+id/textView4"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/frameLayout"
        android:layout_alignEnd="@+id/frameLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_coin_number"
        android:textSize="23dp"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="8dp"
        android:textColor="@color/orange"
        android:id="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/invite_coins"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:textSize="15dp"
        android:id="@+id/textView6" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_invite"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:text="@string/invite_immediately"
        android:textColor="@color/tv_bg"
        android:id="@+id/inviteBt"
        android:textSize="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_activitydetails"
        android:layout_below="@+id/inviteBt"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_activity_detail"/>











</RelativeLayout>
