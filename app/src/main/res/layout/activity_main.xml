<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tsutsuku.artcollection.view.NoScrollViewPager
        android:id="@+id/vpMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="47dp" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tlMain"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:tabPaddingEnd="0dp"
        app:tabIndicatorHeight="0dp"
        app:tabPaddingStart="0dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginBottom="47dp"
        android:background="@color/divider" />

    <FrameLayout
        android:id="@+id/flBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0"
        android:background="@color/white"
        android:visibility="gone">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:background="@color/transparent">

            <ImageButton
                android:id="@+id/ibTreasure"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="150dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_home_treasure" />

            <TextView
                android:id="@+id/tvTreasure"
                style="@style/b15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"
                android:text="@string/treasure" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="80dp"
            android:background="@color/transparent">

            <ImageButton
                android:id="@+id/ibIdentify"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="150dp"
                android:background="@color/transparent"
                android:src="@drawable/icon_home_identify" />

            <TextView
                android:id="@+id/tvIdentify"
                style="@style/b15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="50dp"
                android:text="@string/identify" />
        </FrameLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/ivHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"
        android:src="@drawable/icon_home_button" />
</FrameLayout>