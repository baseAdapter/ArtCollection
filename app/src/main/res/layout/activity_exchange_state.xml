<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_bg"
    android:orientation="vertical"
    tools:context="com.tsutsuku.artcollection.ui.exchange.ExchangeStateActivity">

    <include layout="@layout/base_title" />

    <RelativeLayout
        android:id="@+id/rlExchangeAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addressName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/addressMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/addressName"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/addressName"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addressName"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="22dp"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/icon_arrow_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/icon_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp">

        <ImageView
            android:id="@+id/icon_product"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/exchange_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="34dp"
            android:layout_toRightOf="@+id/icon_product"
            android:lines="2"
            android:maxEms="13"
            android:text="飘花翡翠镯"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/product_need_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exchange_product_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@+id/icon_product"
            android:text="100积分" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/exchange_product_name"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="133dp"
            android:layout_marginRight="20dp"
            android:text="x 1" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c"></View>

    <RelativeLayout
        android:id="@+id/rlDelivery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="13dp"
            android:text="配送方式"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/delivery_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text4"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:text=""
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15.5dp"
            android:layout_marginTop="13dp"
            android:text="卖家留言"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text6"
            android:layout_marginLeft="18.5dp"
            android:layout_toRightOf="@+id/text6"
            android:text="(选填)"
            android:textColor="@color/d"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text6"
            android:background="@color/white"
            android:paddingBottom="5dp"
            android:paddingLeft="15.5dp"
            android:paddingRight="15.5dp"
            android:paddingTop="5dp"
            android:textColor="@color/d"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/c"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/totalCountNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="142dp"
            android:layout_marginTop="12dp"
            android:text="共1件商品"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/totalCountNumber"
            android:layout_marginLeft="22dp"
            android:layout_toRightOf="@+id/totalCountNumber"
            android:text="合计:"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/totalCountCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/totalCountNumber"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/text7"
            android:gravity="center_vertical"
            android:text="100金币"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/rl_bg">

            <TextView
                android:id="@+id/text9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="262dp"
                android:layout_marginTop="10dp"
                android:text="剩余金币:"
                android:textColor="@color/background"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/restCoinsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text9"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/text9"
                android:textColor="@color/background"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/text8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="使用金币:"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/userCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text8"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/text8"
                android:textColor="@color/orange"
                android:textSize="16sp" />

            <Button
                android:id="@+id/submitOrder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignBaseline="@+id/text8"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_submit_order"
                android:text="@string/submit_order"
                android:textColor="@color/tv_bg"
                android:textSize="15sp" />
        </RelativeLayout>

    </LinearLayout>


</LinearLayout>
