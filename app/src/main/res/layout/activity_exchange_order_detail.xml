<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/view_gray"
    tools:context="com.tsutsuku.artcollection.ui.exchange.ExchangeOrderDetailActivity">

    <include layout="@layout/base_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:background="@color/view_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/orderAddressName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/orderAddressMobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/orderAddressName"
                android:layout_marginLeft="60dp"
                android:layout_toRightOf="@+id/orderAddressName"
                android:textSize="13sp" />
        </RelativeLayout>



        <TextView
            android:id="@+id/orderAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="22dp"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        android:background="@color/view_background">
        <ImageView
            android:id="@+id/order_icon_product"
            android:layout_width="99dp"
            android:layout_height="99dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/order_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_icon_product"
            android:maxEms="13"
            android:maxLines="2"
            android:layout_alignTop="@id/order_icon_product"
            android:layout_marginTop="20dp"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/order_product_need_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_icon_product"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@id/order_icon_product"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/order_product_name"
            android:layout_marginLeft="133dp"
            android:layout_marginRight="20dp"
            android:text="x 1"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_background"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp">
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实付款"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/disbursements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/text4"
            android:layout_alignParentRight="true"
            android:textColor="@color/orange"
            android:textSize="14sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/view_background"
        android:layout_marginTop="1dp"
        android:paddingLeft="15dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/order_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_below="@id/order_id"
            android:textSize="12sp"/>



    </RelativeLayout>

</LinearLayout>
